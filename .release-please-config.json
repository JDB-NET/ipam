{
  "packages": {
    ".": {
      "release-type": "simple",
      "version-file": "VERSION",
      "extra-files": [
        "CHANGELOG.md"
      ],
      "changelog-sections": [
        {
          "type": "feat",
          "section": "Features"
        },
        {
          "type": "fix",
          "section": "Bug Fixes"
        },
        {
          "type": "refactor",
          "section": "Refactoring"
        },
        {
          "type": "style",
          "section": "Style Changes"
        },
        {
          "type": "perf",
          "section": "Performance Improvements"
        },
        {
          "type": "docs",
          "section": "Documentation"
        },
        {
          "type": "test",
          "section": "Tests"
        },
        {
          "type": "build",
          "section": "Build System"
        },
        {
          "type": "ci",
          "section": "CI/CD"
        },
        {
          "type": "chore",
          "section": "Chores"
        }
      ]
    }
  },
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}
